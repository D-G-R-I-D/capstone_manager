<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<HBox fx:id="mainRoot" prefHeight="600.0" prefWidth="900.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.capstone.controllers.ChangePasswordController" styleClass="main-bg">

    <StackPane styleClass="logo-container" HBox.hgrow="NEVER">

        <HBox.margin>
            <Insets top="10" right="2" bottom="10" left="30" />
        </HBox.margin>
        <!-- The Bottom Layer: Your Image -->
        <Circle fx:id="logoCircle" radius="70" />

        <!-- The Top Layer: The Fade Effect -->
        <Circle radius="70" mouseTransparent="true">
            <fill>
                <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                    <stops>
                        <Stop offset="0.9" color="TRANSPARENT" />
                        <Stop offset="1.0" color="#0a0e17" /> <!-- Same as container bg -->
                    </stops>
                </RadialGradient>
            </fill>
        </Circle>
    </StackPane>


    <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="10">
        <padding>
            <javafx.geometry.Insets top="0" right="0" bottom="0" left="20"/>
        </padding>
        <Label text="Welcome to" styleClass="welcome-text-small"/>
        <Label text="Capstone Manager" styleClass="welcome-text-large"/>
        <Label text="keep your password safe, it's yours only." styleClass="welcome-subtext" wrapText="true" maxWidth="400"/>
    </VBox>


    <!-- centre line-->
    <HBox alignment="CENTER">
        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
            <padding><Insets right="20"/></padding>
        </StackPane>

        <Region prefWidth="1" prefHeight="820" maxHeight="820">
            <style>
                -fx-background-color: linear-gradient(
                to bottom,
                transparent,
                #4a4e57 20%,
                #4a4e57 80%,
                transparent
                );
            </style>
            <effect>
                <DropShadow color="#3a3f4b" radius="10" spread="0.1" />
            </effect>
        </Region>

        <StackPane HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <padding><Insets left="100"/></padding>
        </StackPane>
    </HBox>

    <!--<Region prefWidth="1" prefHeight="100" maxHeight="80" style="-fx-background-color: grey;" />-->

    <VBox alignment="CENTER" spacing="25" prefWidth="700" styleClass="login-section">
        <VBox fx:id="authContainer"  prefWidth="4000" prefHeight="400" alignment="CENTER" spacing="15" styleClass="authContainer">
            <Label text="Change Password" styleClass="login-header"/>

            <VBox spacing="5" maxWidth="300">
                <TextField fx:id="emailField" promptText="Email" styleClass="glass-field"/>
            </VBox>

            <VBox spacing="5" maxWidth="300">
                <PasswordField fx:id="passwordField" promptText="New Password" styleClass="glass-field"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" styleClass="glass-field"/>
            </VBox>

            <Button text="Change Password" onAction="#handlePasswordChange" styleClass="login-button" maxWidth="300"/>

            <HBox alignment="CENTER" spacing="15">
                <!--<Hyperlink text="Forgot Password?" styleClass="glass-link"/>-->
                <Hyperlink text="Back to Login" onAction="#goToLogin" styleClass="glass-link"/>
            </HBox>
        </VBox>
        <Label fx:id="messageLabel" styleClass="error-label"/>
    </VBox>
</HBox>