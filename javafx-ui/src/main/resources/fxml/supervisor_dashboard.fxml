<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.capstone.controllers.SupervisorDashboardController"
      style="-fx-background-color: #f4f6f8;">

    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
        <Label fx:id="welcomeLabel" text="Supervisor Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>

    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <padding><Insets top="20" right="40" bottom="40" left="40"/></padding>

        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="Managed Projects" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Search:" style="-fx-text-fill: grey;"/>
            <TextField fx:id="searchField" promptText="Title, Student ID or Status..." prefWidth="250"/>
        </HBox>

        <TableView fx:id="projectTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);">
            <columns>
                <TableColumn fx:id="numCol" text="#" prefWidth="40" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="titleCol" text="Project Title" prefWidth="300"/>
                <TableColumn fx:id="studentCol" text="Student ID" prefWidth="120"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="100" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="fileCol" text="File" prefWidth="50" style="-fx-alignment: CENTER;"/>
                <TableColumn fx:id="actionsCol" text="Actions" prefWidth="180" style="-fx-alignment: CENTER;"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY_FLEX_LAST_COLUMN"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>