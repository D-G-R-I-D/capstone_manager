<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<ScrollPane fitToWidth="true" style="-fx-background-color: #f4f6f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capstone.controllers.SupervisorDashboardController">

    <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: #f4f6f8;">

        <HBox alignment="CENTER_LEFT" prefHeight="70" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 12; -fx-background-radius: 8">
            <VBox prefHeight="133.0" prefWidth="438.0">
                <VBox>
                    <Circle fx:id="profileCircle" fill="WHITE" radius="40" stroke="GREY"/>
                </VBox>
                <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Supervisor Dashboard" />
                <Label style="-fx-text-fill: #ebf1f7;" text="Overview of student progress and approvals." />
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" text="Logout" />
        </HBox>

        <HBox prefHeight="187.0" prefWidth="804.0" spacing="20">
            <VBox onMouseEntered="#handleHover" onMouseExited="#handleExit" prefHeight="135.0" prefWidth="260.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%); -fx-padding: 20; -fx-background-radius: 8;  -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-weight: bold;" text="Pending Approvals" />
                <Label fx:id="pendingCountLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f1c40f;" text="0" />
            </VBox>

            <VBox onMouseEntered="#handleHover" onMouseExited="#handleExit" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%); -fx-padding: 20; -fx-background-radius: 8;  -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-weight: bold;" text="Active Projects" />
                <Label fx:id="activeCountLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
            </VBox>

            <VBox onMouseEntered="#handleHover" onMouseExited="#handleExit" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%); -fx-padding: 20; -fx-background-radius: 8;  -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);" HBox.hgrow="ALWAYS">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px; -fx-font-weight: bold;" text="Completed / Graded" />
                <Label fx:id="completedCountLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;" text="0" />
            </VBox>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 5;">
            <Label style="-fx-font-size: 14px; -fx-padding: 0 0 0 10;" text="ðŸ”" />
            <TextField fx:id="searchField" prefHeight="25.0" prefWidth="562.0" promptText="Search by Student ID, Title..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #95a5a6;" HBox.hgrow="ALWAYS" />
        </HBox>

        <VBox style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);" VBox.vgrow="ALWAYS">
            <TableView fx:id="projectTable" minHeight="400" prefHeight="694.0" prefWidth="804.0" style="-fx-background-color: white; -fx-border-color: transparent;">
                <columns>
                    <TableColumn fx:id="numCol" prefWidth="40" style="-fx-alignment: CENTER;" text="#" />
                    <TableColumn fx:id="titleCol" prefWidth="300" text="Project Title" />
                    <TableColumn fx:id="studentCol" prefWidth="120" text="Student ID" />
                    <TableColumn fx:id="statusCol" prefWidth="100" style="-fx-alignment: CENTER;" text="Status" />
                    <TableColumn fx:id="fileCol" prefWidth="60" style="-fx-alignment: CENTER;" text="File" />
                    <TableColumn fx:id="actionsCol" prefWidth="180" style="-fx-alignment: CENTER;" text="Actions" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <HBox prefHeight="407.0" prefWidth="1073.0" spacing="20">
            <VBox style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" text="Project Status Distribution" />
                <PieChart fx:id="statusPieChart" labelsVisible="true" legendVisible="true" />
            </VBox>

            <VBox prefWidth="523.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" text="Completed Project Scores" />
                <BarChart fx:id="scoreBarChart">
                    <xAxis><CategoryAxis label="Student" /></xAxis>
                    <yAxis><NumberAxis label="Score" /></yAxis>
                </BarChart>
            </VBox>
        </HBox>

    </VBox>
</ScrollPane>
