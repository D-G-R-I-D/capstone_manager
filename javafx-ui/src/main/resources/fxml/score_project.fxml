<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="15" alignment="CENTER" styleClass="form-container"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.capstone.controllers.ScoreProjectController">

    <Label text="Score Project" styleClass="title"/>

    <Label text="Technical Depth (0-20)"/>
    <Slider fx:id="technicalSlider" min="0" max="20" value="0"/>

    <Label text="Problem Solving (0-20)"/>
    <Slider fx:id="problemSlider" min="0" max="20" value="0"/>

    <Label text="Presentation (0-20)"/>
    <Slider fx:id="presentationSlider" min="0" max="20" value="0"/>

    <Label text="Design (0-20)"/>
    <Slider fx:id="designSlider" min="0" max="20" value="0"/>

    <Label fx:id="totalLabel" text="Total: 0/80" styleClass="subtitle"/>

    <Button text="Save Score" onAction="#saveScore" styleClass="primary-button"/>
</VBox>