<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="mainRoot" prefHeight="600.0" prefWidth="900.0" styleClass="main-bg" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capstone.controllers.LoginController">

    <StackPane styleClass="logo-container" HBox.hgrow="NEVER">

        <HBox.margin>
            <Insets bottom="10" left="30" right="2" top="10" />
        </HBox.margin>
        <!-- The Bottom Layer: Your Image -->
        <Circle fx:id="logoCircle" radius="70" />

        <!-- The Top Layer: The Fade Effect -->
        <Circle mouseTransparent="true" radius="70">
            <fill>
                <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                    <stops>
                        <Stop color="TRANSPARENT" offset="0.9" />
                        <Stop color="#0a0e17" offset="1.0" /> <!-- Same as container bg -->
                    </stops>
                </RadialGradient>
            </fill>
        </Circle>
    </StackPane>


    <VBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS">
        <padding>
            <javafx.geometry.Insets bottom="0" left="20" right="0" top="0" />
        </padding>
        <Label styleClass="welcome-text-small" text="Welcome to" />
        <Label prefHeight="35.0" prefWidth="496.0" styleClass="welcome-text-large" text="Capstone Manager">
         <font>
            <Font name="System Bold" size="36.0" />
         </font></Label>
        <Label maxWidth="400" styleClass="welcome-subtext" text="Manage your academic milestones with ease." wrapText="true" />
    </VBox>

                               <!-- centre line-->
    <HBox alignment="CENTER">
        <StackPane alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
            <padding><Insets right="20" /></padding>
        </StackPane>

        <Region maxHeight="820" prefHeight="820" prefWidth="1">
        <style>
            -fx-background-color: linear-gradient(
                to bottom,
                transparent,
                #4a4e57 20%,
                #4a4e57 80%,
                transparent
            );
        </style>
            <effect>
                <DropShadow color="#3a3f4b" radius="10" spread="0.1" />
            </effect>
        </Region>

        <StackPane alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <padding><Insets left="20" /></padding>
        </StackPane>
    </HBox>

    <!--<Region prefWidth="1" prefHeight="100" maxHeight="80" style="-fx-background-color: grey;" />-->

    <VBox alignment="CENTER" prefWidth="700" spacing="25" styleClass="login-section">
        <VBox fx:id="authContainer" alignment="CENTER" prefHeight="400" prefWidth="4000" spacing="15" styleClass="authContainer">
            <Label styleClass="login-header" text="USER LOGIN" />

            <VBox maxWidth="300" spacing="5">
                <TextField fx:id="emailField" promptText="Email" styleClass="glass-field" />
            </VBox>

            <VBox maxWidth="300" spacing="5">
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="glass-field" translateX="45.0" />
            </VBox>

            <Button maxWidth="300" onAction="#handleLogin" styleClass="login-button" text="LOGIN" />

            <HBox alignment="CENTER" spacing="15">
                <Hyperlink onAction="#goToChangePasswordScene" styleClass="glass-link" text="Forgot Password?" />
                <Hyperlink onAction="#goToRegister" styleClass="                 glass-link" text="Create Account" />
            </HBox>
        </VBox>
        <Label fx:id="errorLabel" styleClass="error-label" />
    </VBox>
</HBox>
