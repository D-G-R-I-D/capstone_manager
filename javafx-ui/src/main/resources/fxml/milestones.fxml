<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.capstone.controllers.MilestoneController"
      style="-fx-background-color: #f4f6f8; -fx-padding: 20;">

    <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 8;">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        <Label text="Project Roadmap" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox fx:id="milestoneList" spacing="10" style="-fx-background-color: white;"/>
        </ScrollPane>
    </VBox>

    <VBox spacing="15" prefWidth="350" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 8;">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        <Label text="Supervisor Feedback" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Separator/>
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <VBox fx:id="commentBox" spacing="10" style="-fx-background-color: white; -fx-padding: 5;"/>
        </ScrollPane>
    </VBox>

</HBox>