<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<BorderPane fx:id="mainRoot" prefHeight="700.0" prefWidth="1100.0"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.capstone.controllers.StudentDashboardController"
            style="-fx-background-color: #f4f6f8;">

    <left>
        <VBox spacing="20" prefWidth="260" style="-fx-background-color: #2c3e50;">
            <padding><Insets top="40" right="20" bottom="20" left="20"/></padding>

            <VBox alignment="CENTER" spacing="15">
                <Circle fx:id="profileCircle" radius="40" fill="WHITE" stroke="GREY"/>
                <Label fx:id="studentName" text="Student" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px;"/>
            </VBox>

            <Separator opacity="0.1"/>

            <VBox spacing="10">
                <fx:define>
                    <ToggleGroup fx:id="navGroup"/>
                </fx:define>
                <ToggleButton text="Dashboard Home" onAction="#handleDashboardNav" maxWidth="Infinity"
                       styleClass="nav-button" toggleGroup="$navGroup"/>

                <ToggleButton text="My Projects" onAction="#handleProjectDetailsNav" maxWidth="Infinity"
                        styleClass="nav-button" toggleGroup="$navGroup"/>

                <ToggleButton text="Milestones" onAction="#handleMilestonesNav" maxWidth="Infinity"
                        styleClass="nav-button" toggleGroup="$navGroup"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS" />

            <Button text="Logout" onAction="#handleLogout" maxWidth="Infinity"
                    style="-fx-text-fill: #ff6b6b; -fx-background-color: transparent; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f6f8;">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        </StackPane>
    </center>

</BorderPane>