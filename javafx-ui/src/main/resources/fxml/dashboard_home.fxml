<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.capstone.controllers.DashboardHomeController">

    <VBox spacing="30" style="-fx-background-color: white; -fx-padding: 40;">

        <VBox spacing="5">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Welcome back!" />
            <Label style="-fx-text-fill: grey; -fx-font-size: 14px;" text="Here is the real-time status of your academic projects." />
        </VBox>

        <HBox alignment="CENTER_LEFT" prefWidth="2303.0" spacing="20">
            <VBox fx:id="rejectedBox" onMouseEntered="#handleHover" onMouseExited="#handleExit" prefHeight="190.0" prefWidth="344.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%);
                    -fx-padding: 20; -fx-background-radius: 10;
                    -fx-min-width: 270; -fx-min-height: 190; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1; -fx-border-radius: 10;                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Rejected" />
                <Label fx:id="rejectedCountLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <VBox fx:id="pendingBox" onMouseEntered="#handleHover" onMouseExited="#handleExit" prefHeight="190.0" prefWidth="344.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%);                        -fx-padding: 20; -fx-background-radius: 10;                        -fx-min-width: 270; -fx-min-height: 190; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1;             -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Pending Approval" />
                <Label fx:id="pendingCountLabel" style="-fx-text-fill: #f1c40f; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <VBox fx:id="activeBox" onMouseEntered="#handleHover" onMouseExited="#handleExit" prefHeight="190.0" prefWidth="344.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%); -fx-padding: 20; -fx-background-radius: 10;                     -fx-min-width: 270; -fx-min-height: 190; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1; -fx-border-radius: 10;                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Active Projects" />
                <Label fx:id="activeCountLabel" style="-fx-text-fill: #3498db; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

            <VBox fx:id="completedBox" onMouseEntered="#handleHover" onMouseExited="#handleExit" prefHeight="190.0" prefWidth="344.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #f2f9ff 0%, #ffffff 100%); -fx-padding: 20; -fx-background-radius: 10;                     -fx-min-width: 270; -fx-min-height: 190; -fx-border-color: rgba(255, 255, 255, 0.3);                     -fx-border-width: 1; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.2), 10, 0, 0, 5);">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;" text="Completed" />
                <Label fx:id="completedCountLabel" style="-fx-text-fill: #2ecc71; -fx-font-size: 36px; -fx-font-weight: bold;" text="0" />
            </VBox>

        </HBox>

        <Separator />

        <HBox prefHeight="250" spacing="20">

        </HBox>

        <HBox prefHeight="407.0" prefWidth="2303.0" spacing="30" VBox.vgrow="ALWAYS">

            <VBox spacing="10" style="-fx-border-color: #eee; -fx-border-radius: 10; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Project Status Distribution" />
                <PieChart fx:id="statusPieChart" labelsVisible="true" legendVisible="false" maxHeight="300" />
            </VBox>

            <VBox spacing="10" style="-fx-border-color: #eee; -fx-border-radius: 10; -fx-padding: 15;" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Milestones: Planned vs Completed" />
                <BarChart fx:id="milestoneBarChart" maxHeight="300" onMouseEntered="#handlePieHover" onMouseExited="#handlePieHoverExit">
                    <xAxis><CategoryAxis label="Projects" /></xAxis>
                    <yAxis><NumberAxis label="Count" /></yAxis>
                </BarChart>
            </VBox>

        </HBox>
    <Label alignment="CENTER" style="-fx-text-fill: #2c3e50" text="Â©Copy right" />
    </VBox>
</ScrollPane>
